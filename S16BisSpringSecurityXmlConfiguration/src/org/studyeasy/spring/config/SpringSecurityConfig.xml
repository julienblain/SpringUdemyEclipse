<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


	<security:authentication-manager>
		<security:authentication-provider>
			
		<security:jdbc-user-service data-source-ref="dataSource" />
		<security:password-encoder ref="encoder"></security:password-encoder>
		</security:authentication-provider>
	</security:authentication-manager>
	
	<security:http use-expressions="true" jaas-api-provision="false">
		<security:intercept-url pattern="/files/**" access="permitAll" /> <!-- css -->
		<security:intercept-url pattern="/" access="permitAll" />
		<security:intercept-url pattern="/logout" access="permitAll" />	
		<security:intercept-url pattern="/user" access="hasAnyRole('USER', 'ADMIN')" /><!-- spring add prefix ROLE_ in db -->
		
		<!--<security:intercept-url pattern="/admin" access='hasRole("ADMIN")' /> attention au quote sinon bug -->
		<security:intercept-url pattern="/admin" access="permitAll" /><!-- securisÃ© in router with annotation -->
		
		<security:intercept-url pattern="/login" access="permitAll" /> <!-- login custom -->
		<security:intercept-url pattern="/addUser" access="isAuthenticated()" />
		<security:intercept-url pattern="/**" access="denyAll" />
		
		<security:form-login login-page="/login"
			authentication-failure-url="/login?error" />
		<security:remember-me remember-me-parameter="remember-me"
			key="randomKey" data-source-ref="dataSource" />
		<security:logout invalidate-session="true"
			logout-success-url="/" logout-url="/" />


		<security:access-denied-handler error-page="/403" />
		<security:intercept-url pattern="/403" access="permitAll" />
		
	</security:http>
	<security:global-method-security secured-annotations="enabled"></security:global-method-security>
	
	<!-- bcrypt password -->
	<bean id="encoder"
		class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
	</bean>
</beans>
